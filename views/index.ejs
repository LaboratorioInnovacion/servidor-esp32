<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Dispositivos y Mediciones</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 40px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #eee;
    }
    .online {
      color: green;
      font-weight: bold;
    }
    .offline {
      color: red;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Listado de Dispositivos</h1>
  <table>
    <thead>
      <tr>
        <th>MAC</th>
        <th>Nombre</th>
        <th>Estado</th>
        <th>Versión</th>
        <th>Último Visto</th>
      </tr>
    </thead>
    <tbody>
      <% if (devices && devices.length > 0) { %>
        <% devices.forEach(function(device) { %>
          <tr>
            <td><%= device.mac %></td>
            <td><%= device.name %></td>
            <td class="<%= device.status === 'online' ? 'online' : 'offline' %>">
              <%= device.status %>
            </td>
            <td><%= device.version %></td>
            <td><%= device.last_seen %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5">No hay dispositivos registrados</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <h1>Listado de Mediciones</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>MAC</th>
        <th>Tiempo</th>
        <th>Uptime</th>
      </tr>
    </thead>
    <tbody>
      <% if (measurements && measurements.length > 0) { %>
        <% measurements.forEach(function(med) { %>
          <tr>
            <td><%= med.id %></td>
            <td><%= med.mac %></td>
            <td><%= med.time %></td>
            <td><%= med.uptime %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="4">No hay mediciones registradas</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
